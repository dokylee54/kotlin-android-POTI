<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/page_lr_padding"
        android:paddingRight="@dimen/page_lr_padding"
        android:background="@color/white_100">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/profile_xmlUp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/drawable_padding_half"
                android:text="Profile"
                android:textStyle="bold"
                android:textColor="@color/black_100"
                android:textSize="@dimen/title_font_size"
                android:gravity="center_horizontal"/>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/round_70"
                app:cardElevation="0dp">

            <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/profile_user_img"
                    android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>



        <TextView
                android:id="@+id/profile_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/drawable_padding_half"
                android:paddingBottom="@dimen/drawable_padding_half"
                android:text="user_id"
                android:textColor="@color/black_100"
                android:textSize="@dimen/body_font_size"
                android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/linearLayout4"
            android:layout_marginTop="3dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_xmlUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <View
                android:layout_width="190dp"
                android:layout_height="4.5dp"
                android:background="@drawable/round_line"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout5"
            android:layout_marginBottom="150dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">


        <TextView
                android:id="@+id/log_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Status"
                android:textColor="@color/black_100"
                android:textSize="@dimen/body_font_size"
                android:paddingTop="15dp"
                android:paddingLeft="@dimen/drawable_padding"
                android:paddingRight="@dimen/drawable_padding"
                android:paddingBottom="15dp"
                android:gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_logout_24"
                android:drawableTint="@color/lightlightGray"/>

        <TextView
                android:id="@+id/delete_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Profile"
                android:textColor="@color/black_100"
                android:textSize="@dimen/body_font_size"
                android:paddingTop="15dp"
                android:paddingLeft="@dimen/drawable_padding"
                android:paddingRight="@dimen/drawable_padding"
                android:paddingBottom="15dp"
                android:gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_profile_24"
                android:drawableTint="@color/lightlightGray"/>

        <TextView
                android:id="@+id/feedback_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textColor="@color/black_100"
                android:textSize="@dimen/body_font_size"
                android:paddingTop="15dp"
                android:paddingLeft="@dimen/drawable_padding"
                android:paddingRight="@dimen/drawable_padding"
                android:paddingBottom="15dp"
                android:gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_envelope_24"
                android:drawableTint="@color/lightlightGray"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>