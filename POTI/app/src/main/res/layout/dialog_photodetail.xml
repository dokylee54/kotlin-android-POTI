<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/page_lr_padding"
              android:paddingBottom="@dimen/page_td_padding"
              android:paddingLeft="@dimen/page_lr_padding_half"
              android:paddingRight="@dimen/page_lr_padding_half"
              android:background="@drawable/dialog_box">

    <TextView
            android:id="@+id/photodetail_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/page_lr_padding"
            android:text="dd"
            android:textColor="@color/black_100"
            android:textStyle="italic|bold"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/page_lr_padding"/>

    <TextView
            android:id="@+id/photodetail_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/page_lr_padding_half"
            android:text="20938"
            android:textColor="@color/lightGray"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/page_lr_padding"/>

    <TextView
            android:id="@+id/photodetail_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/page_lr_padding_half"
            android:text=""
            android:textColor="@color/black_100"
            android:textAlignment="center"/>

</LinearLayout>