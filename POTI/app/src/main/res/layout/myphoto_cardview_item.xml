<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/verysmall_card_width"
        android:layout_height="@dimen/verysmall_card_height"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/page_lr_padding_half"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:padding="@dimen/margin_10">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/myphoto_movie_img"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@drawable/myphoto_cardview_img"/>
        
        <TextView
                android:id="@+id/myphoto_movie_des"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="test"
                android:textStyle="italic"
                android:textColor="@color/black_100"
                android:textSize="8dp"
                android:gravity="center"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>